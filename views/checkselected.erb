<link rel="stylesheet" href="css/style.css">

<center>
<header>
Pizza size:
</header><br>
<%=size%><br><br>

<hr>
<body>
<form method = 'post' action = '/checkselected'>
<p>

<p>
Crust?<br><br>
<img src=https://via.placeholder.com/140x100><br>
<%=crust%>
</p>

<hr>

Meats:

</p><br>
<%meats.each do|v|%>
<div class="<%=v%>">
<img src=https://via.placeholder.com/140x100><br>
</div>
    <%=v%><br>
    <input type="radio" name="<%=v%>" value="Yes" checked>Keep?
    <input type="radio" name="<%=v%>" value="No" >Discard?<br><br>
<%end%><br><br>

<hr>

<p>
Vegetables:
</p><br>
<%veg.each do|v|%>
<img src=https://via.placeholder.com/140x100><br>
    <%=v.concat(" ")%><br>
<%# <input type="radio" name="veggies[]" value="Yes" checked>Keep?
    <input type="radio" name="veggies[]" value="No" >Discard?<br><br> %>
<%end%><br><br>


<hr>

<p>
Extras:
</p><br>
<%extras.each do|v|%>
<img src=https://via.placeholder.com/140x100><br>
    <%=v.concat(" ")%><br>
    <%# <input type="radio" name="extras[]" value="Yes" checked>Keep?
    <input type="radio" name="extras[]" value="No" >Discard?<br><br> %>
<%end%><br><br>

<hr>

<p>
Delivery?
</p> <br>
<%=delivery%>


<hr>

<br>
<input type="submit" value="Submit">
<input type="hidden" name="size" value='<%=size%>'>
<input type="hidden" name="crust" value='<%=crust%>'>
<input type="hidden" name="meat[]" value='<%=meats%>'>
<input type="hidden" name="veggies[]" value='<%=veg%>'>
<input type="hidden" name="extras[]" value='<%=extras%>'>
<input type="hidden" name="delivery" value='<%=delivery%>'>
</center>
</form>
</body>

